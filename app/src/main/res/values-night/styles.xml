<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="screen">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/main_padding</item>
    </style>
    <style name="dark_theme_switch">
        <item name="android:checked">true</item>
        <item name="android:switchMinWidth">56dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="placeholder_message">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="update_button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="background">@drawable/button</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>