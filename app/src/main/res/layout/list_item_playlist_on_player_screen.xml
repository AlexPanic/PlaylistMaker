<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/line_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivPlaylistCover"
        android:layout_width="@dimen/cover_size_little"
        android:layout_height="@dimen/cover_size_little"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/icon_padding"
        android:contentDescription="@string/lorem_ipsum"
        android:src="@drawable/cover_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlaylistName"
            style="@style/track_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="BEST Playlist Ever!" />

        <TextView
            android:id="@+id/tvTracksCount"
            style="@style/track_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="3 трека" />

    </LinearLayout>

</LinearLayout>