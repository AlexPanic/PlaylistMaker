<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/main_screen">

    <TextView
        style="@style/app_header"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/btn_search"
        style="@style/main_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/btn_margin"
        android:layout_weight="1"
        android:text="@string/act_search"
        app:icon="@drawable/search" />

    <Button
        android:id="@+id/btn_media"
        style="@style/main_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/btn_margin"
        android:layout_weight="1"
        android:text="@string/act_media"
        app:icon="@drawable/media" />

    <Button
        android:id="@+id/btn_settings"
        style="@style/main_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/btn_margin"
        android:layout_weight="1"
        android:text="@string/act_settings"
        app:icon="@drawable/settings" />


</LinearLayout>