<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Screen">

    <LinearLayout style="@style/Top">
        <ImageView style="@style/backArrow"
            android:id="@+id/go_back"/>
        <TextView style="@style/Header"
            android:text="@string/btn_settings" />
    </LinearLayout>


    <FrameLayout style="@style/Line">
        <TextView style="@style/Option"
            android:text="@string/settings_dark" />
        <Switch style="@style/darkThemeSwitch"
            />
    </FrameLayout>

    <FrameLayout style="@style/Line">
        <TextView style="@style/Option"
            android:text="@string/settings_share" />
        <ImageView style="@style/optionIcon"
            android:src="@drawable/share"
            android:contentDescription="@string/imgShare"
            />
    </FrameLayout>

    <FrameLayout style="@style/Line">
        <TextView style="@style/Option"
            android:text="@string/settings_support" />

        <ImageView style="@style/optionIcon"
            android:src="@drawable/support"
            android:contentDescription="@string/imgSupport"
            />
    </FrameLayout>

    <FrameLayout style="@style/Line">
        <TextView style="@style/Option"
            android:text="@string/settings_agreement" />

        <ImageView style="@style/optionIcon"
            android:src="@drawable/arrow_forward"
            android:contentDescription="@string/imgAgreement"
            />
    </FrameLayout>

</LinearLayout>