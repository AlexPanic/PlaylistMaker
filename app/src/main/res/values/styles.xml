<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main">
        <item name="android:background">@color/yp_white</item>
    </style>

    <style name="toolbar">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_text</item>
    </style>

    <style name="toolbar_main" parent="toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>

    <style name="screen">
        <item name="android:background">@color/yp_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">@dimen/main_padding</item>
    </style>

    <style name="main_screen" parent="screen">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <style name="back_arrow">
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:layout_marginEnd">@dimen/icon_padding</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:contentDescription">@string/img_back</item>
    </style>

    <style name="header_text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_text</item>
    </style>

    <style name="header" parent="header_text">
        <item name="android:layout_gravity">top|center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="app_header" parent="header">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/header_margin</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/btn_radius</item>
    </style>

    <style name="normal_text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">20dp</item>
    </style>

    <style name="option" parent="normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="theme_switcher" parent="option">
        <item name="thumbTint">@color/switcher_thumb</item>
        <item name="trackTint">@color/switcher_track</item>
    </style>

    <style name="option_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginStart">@dimen/list_icon_margin_left</item>
        <item name="android:layout_marginEnd">@dimen/list_icon_margin_right</item>
    </style>

    <style name="search_input_back" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/shape</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="startIconDrawable">@drawable/search_input</item>
        <item name="startIconMinSize">32dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconScaleType">fitCenter</item>
        <item name="endIconDrawable">@drawable/clear_icon</item>
        <item name="endIconMinSize">32dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <style name="search_input">
        <item name="android:background">@null</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">100</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/input_text</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="track_name">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/track_name</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="search_history_header">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/header_color</item>
    </style>

    <style name="filled_button">
        <item name="android:backgroundTint">@color/filled_button_tint</item>
        <item name="android:textColor">@color/filled_button_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="track_info">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_info</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="placeholder_message">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="update_button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="background">@drawable/button</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>